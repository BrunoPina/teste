<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<ui:with field="res" type="br.com.tagme.gwt.theme.sankhya.client.CommonImagesFactory"/>
	
	<b:Container addStyleNames="footer-container" height="40">
		<b:Row height="40">
			<b:Column size="XS_12 SM_2">
				<b:Image addStyleNames="footer-logomarca" resource="{res.create.logomarcasankhya}"></b:Image>
			</b:Column>
			
			<b:Column size="XS_12 SM_10 MD_7 LG_6" offset="MD_3 LG_4">
				<b:Row>
					<b:Column size="XS_12 SM_3">
						<h:Small ui:field="email" addStyleNames="footer-text" text="place@sankhya.com.br" />
					</b:Column>
					<b:Column size="XS_12 SM_3">
						<h:Small ui:field="freetel" addStyleNames="footer-text" text="0800 940 0750" />
					</b:Column>
					<b:Column size="XS_12 SM_3">
						<h:Small ui:field="tel" addStyleNames="footer-text" text="+55 (34) 3239-0700" />
					</b:Column>
					<b:Column size="XS_12 SM_3">
						<h:Small ui:field="site" addStyleNames="footer-text" text="www.sankhya.com.br" />
					</b:Column>
				</b:Row>
			</b:Column>
		</b:Row>
	</b:Container>
	
</ui:UiBinder> 