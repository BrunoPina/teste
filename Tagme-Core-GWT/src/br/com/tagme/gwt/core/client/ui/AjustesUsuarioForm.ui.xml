<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:sp="urn:import:br.com.tagme.gwt.commons.client.components.formitem" 
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<g:FlowPanel ui:field="outerPanel">
		<b:Modal ui:field="modal" closable="true" title="Ajustes da Conta">
			<b:ModalBody>
				<g:FormPanel ui:field="formPanel" addStyleNames="form-horizontal" method="POST">
					<b:FieldSet ui:field="fsFormPanel">
						<b:Row>
							<b:Column size="XS_12"> 
								<b:Image addStyleNames="center-block" type="CIRCLE" ui:field="imgUsuario" />							
							</b:Column>
							<b:Column size="XS_12" marginTop="8">
								<g:FlowPanel styleName="center-text">
									<g:FlowPanel>
										<h:Paragraph ui:field="fileName" visible="false" />									
										<b:ButtonGroup ui:field="containerBtnFoto" >
											<b:Button ui:field="btnAlterarFoto" size="EXTRA_SMALL">Alterar Foto</b:Button>
										</b:ButtonGroup>
										<b:Button ui:field="btnCancelarFoto" visible="false" size="EXTRA_SMALL">Cancelar</b:Button>
									</g:FlowPanel>
								</g:FlowPanel>
							</b:Column>
						</b:Row>
						<g:FileUpload name="foto" visible="false" ui:field="formFoto" />						
						<sp:FormItem addStyleNames="first-form-item" ui:field="formEmail" label="E-mail" type="0" leftColumnSize="SM_3" rightColumnSize="SM_9" />
						<sp:FormItem autoComplete="false" ui:field="formNome" name="nome" label="Nome*" type="1" leftColumnSize="SM_3" rightColumnSize="SM_8" />
						<b:Row>
							<b:Column offset="SM_3" size="XS_12,SM_8" marginBottom="6">
								<h:Italic addStyleNames="small" text="* Campo obrigatório." />							
							</b:Column>
						</b:Row>
						<b:Divider />
						<sp:FormItem ui:field="formAlteraSenha" name="alteraSenha" label="Alterar Senha" value="N" type="3" leftColumnSize="SM_3" rightColumnSize="SM_8" />
						<sp:FormItem ui:field="formSenhaAtual"  name="senhaAtual" label="Senha Atual*" type="2" leftColumnSize="SM_3" rightColumnSize="SM_5" enabled="false" />
						<sp:FormItem ui:field="formNovaSenha"  name="novaSenha" label="Nova Senha*" type="2" leftColumnSize="SM_3" rightColumnSize="SM_5" enabled="false" />
						<sp:FormItem ui:field="formConfSenha"  name="confSenha" label="Confirmar Senha*" type="2" leftColumnSize="SM_3" rightColumnSize="SM_5" enabled="false" />
						<b:Row>
							<b:Column offset="SM_3" size="XS_12,SM_8">
								<h:Italic addStyleNames="small" text="* Campos obrigatórios." />							
							</b:Column>
						</b:Row>
					</b:FieldSet>
				</g:FormPanel>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button  dataLoadingText="Alterando..."  type="SUCCESS" ui:field="btnSalvar" text="Salvar" />
				<b:Button type="DANGER" text="Fechar" dataDismiss="MODAL" />
			</b:ModalFooter>
		</b:Modal>
	</g:FlowPanel>
	
	
</ui:UiBinder> 