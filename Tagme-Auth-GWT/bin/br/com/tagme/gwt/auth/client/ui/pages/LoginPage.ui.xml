<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:s="urn:import:br.com.tagme.gwt.auth.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<ui:with field="res" type="br.com.tagme.gwt.theme.sankhya.client.CommonImagesFactory"/>
	
	<b:Row height="100%" addStyleNames="parent-center-vertical">
	
		<b:Column hiddenOn="XS" offset="SM_0 MD_1" size="XS_0 SM_6 MD_6" height="100%" addStyleNames="center-vertical">
			<b:Row>
				<b:Column size="XS_12">
				  	<b:Image addStyleNames="center-block depoimento-image" resource="{res.create.rosalina}" type="CIRCLE"/>
				</b:Column>
				<b:Column size="XS_12">
					<b:BlockQuote addStyleNames="center-block loginpage-blockquote">
						<h:Paragraph text="&quot;Novas ideias e estratégias não têm hora para virem à cabeça. Por isso, é bom contar com a Sankhya e ter meus negócios na palma da minha mão a qualquer hora ou lugar.&quot;" />
						<h:Small text="Rosalina Vilela, Presidente da Erlan" />
					</b:BlockQuote>
				</b:Column>		
			</b:Row>
		</b:Column>
		
		<b:Column size="XS_12 SM_6 MD_4" height="100%" addStyleNames="center-vertical">
			<s:LoginForm ui:field="loginForm" />
			<b:Button addStyleNames="right-block xs-center-block btn-criar-conta" ui:field="btnCriarConta" text="Criar minha conta" type="LINK" />
			<b:Button addStyleNames="right-block xs-center-block btn-criar-conta" ui:field="btnReenviarEmail" text="Reenviar e-mail de confirmação" type="LINK" />
			<g:FormPanel ui:field="reenviarEmailForm" action="" method="POST"/>
		</b:Column>
		
	</b:Row>
	
</ui:UiBinder> 